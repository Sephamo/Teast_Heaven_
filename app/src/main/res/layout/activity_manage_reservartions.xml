<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".activity_manage_reservations">

    <!-- Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/background_darker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Reservations"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Date Selector -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_date_picker"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/background_darker"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_status_filter"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="May 08, 2025"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Status Filter -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_status_filter"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/background_darker"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toEndOf="@id/btn_date_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_date_picker">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All Status"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- New Reservation Button -->
    <Button
        android:id="@+id/btn_new_reservation"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="+ New Reservation"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_date_picker"
        app:layout_constraintStart_toStartOf="@id/btn_date_picker"
        app:layout_constraintEnd_toEndOf="@id/btn_status_filter" />

    <!-- Time Header -->
    <TextView
        android:id="@+id/tv_header_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_header_name"
        app:layout_constraintTop_toBottomOf="@id/btn_new_reservation"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Name Header -->
    <TextView
        android:id="@+id/tv_header_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_header_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_header_guests"
        app:layout_constraintTop_toTopOf="@id/tv_header_time" />

    <!-- Guests Header -->
    <TextView
        android:id="@+id/tv_header_guests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guests"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_header_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_header_table"
        app:layout_constraintTop_toTopOf="@id/tv_header_time" />

    <!-- Table Header -->
    <TextView
        android:id="@+id/tv_header_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Table"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_header_guests"
        app:layout_constraintEnd_toStartOf="@+id/tv_header_status"
        app:layout_constraintTop_toTopOf="@id/tv_header_time" />

    <!-- Status Header -->
    <TextView
        android:id="@+id/tv_header_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_header_table"
        app:layout_constraintEnd_toStartOf="@+id/tv_header_actions"
        app:layout_constraintTop_toTopOf="@id/tv_header_time" />

    <!-- Actions Header -->
    <TextView
        android:id="@+id/tv_header_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actions"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_header_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_header_time" />


    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tv_header_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Reservations RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reservations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#121212"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/homeFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                app:tint="#919191" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#919191"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menus"
                app:tint="#919191" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="#919191"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reservationsFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar1"
                app:tint="#4080FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservations"
                android:textColor="#4080FF"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/staffFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_staff1"
                app:tint="#919191" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff"
                android:textColor="#919191"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportsFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chart"
                app:tint="#919191" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textColor="#919191"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>