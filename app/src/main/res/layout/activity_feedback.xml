<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weâ€™d Love to Hear from
                You..."
                android:textSize="28sp"
                android:textStyle="bold|italic"
                android:textColor="#FF9800"
                android:layout_gravity="center"
                android:padding="16dp" />

            <TextView
                android:id="@+id/experienceHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Voice Makes Us Better.."
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:textColor="#FF9800"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/experienceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="How was your experience?"
                android:textColorHint="#AAAAAA"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:background="@drawable/edittext_background"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/ratingHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enjoyed Your Visit? Rate Us!"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:textColor="#FF9800"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <RatingBar
                android:progressTint="@color/star_yellow"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="0"
                android:layout_gravity="center"
                android:isIndicator="false"
                android:layout_marginBottom="16dp"
                android:theme="@style/RatingBarStyle" />

            <TextView
                android:id="@+id/feedbackHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Feedback"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:textColor="#FF9800"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/feedbackEditText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Write your feedback here..."
                android:textColor="#000000"
                android:textColorHint="#AAAAAA"
                android:background="@drawable/edittext_background"
                android:gravity="top|start"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/categoryHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:textColor="#FF9800"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/categoryCheckBoxLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/serviceCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Service"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFD700" />

                <CheckBox
                    android:id="@+id/foodQualityCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food Quality"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFD700" />

                <CheckBox
                    android:id="@+id/ambienceCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ambience"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFD700" />

            </LinearLayout>

            <Button
                android:id="@+id/submitFeedbackButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Feedback"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:itemTextColor="#FF9800"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="labeled"
        app:itemHorizontalTranslationEnabled="true"
        app:menu="@menu/menu_main" />

</LinearLayout>
