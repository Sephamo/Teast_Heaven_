<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Waiter">

    <!-- ScrollView with Your Main Content -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- OUTER BORDER CONTAINER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned Tables"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <!-- Row 1: Table 1 and Table 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <!-- Table 1 -->
                    <LinearLayout
                        android:id="@+id/table1Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_inner_line"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/Table1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Table 1"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Table1Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/Table1Guests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guests: 0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Table 4 -->
                    <LinearLayout
                        android:id="@+id/table4Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_inner_line"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/Table4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Table 4"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Table4Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/Table4Guests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guests: 0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: Table 2 and Table 5 -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <!-- Table 2 -->
                    <LinearLayout
                        android:id="@+id/table2Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_inner_line"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/Table2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Table 2"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Table2Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/Table2Guests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guests: 0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Table 5 -->
                    <LinearLayout
                        android:id="@+id/table5Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_inner_line"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/Table5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Table 5"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Table5Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTable5Guests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guests: 0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 3: Table 3 and Take Order -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <!-- Table 3 -->
                    <LinearLayout
                        android:id="@+id/table3Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_inner_line"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/Table3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Table 3"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Table3Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/Table3Guests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guests: 0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Take Order Button -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select to take order..."
                        android:textStyle="bold|italic"
                        android:textColor="#FF9800"
                        android:layout_marginStart="8dp"
                        android:padding="12dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        android:background="#222222"
        app:itemIconTint="@color/white"
        app:itemTextColor="#FF9800"
        app:menu="@menu/waiter" />
</RelativeLayout>








