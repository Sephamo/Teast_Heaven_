<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="#000000"
    android:layout_marginTop="1dp">

    <!-- main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/logoContainer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/logo"
                    android:contentDescription="Restaurant Logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="serif"
                android:text="The Garden of Eat'N"
                android:textColor="#D4AF37"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/restaurantTagline"
                app:layout_constraintStart_toEndOf="@+id/logoContainer"
                app:layout_constraintTop_toTopOf="@+id/logoContainer" />

            <TextView
                android:id="@+id/restaurantTagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Fine Dining Experience"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/logoContainer"
                app:layout_constraintStart_toStartOf="@+id/restaurantName"
                app:layout_constraintTop_toBottomOf="@+id/restaurantName" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- SCROLLABLE CONTENT -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <!-- Content inside scroll view -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SCROLLABLE HEADER -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="#000000">

                    <!-- Notifications and Profile Icons -->
                    <ImageView
                        android:id="@+id/notification_icon"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentEnd="false"
                        android:layout_marginEnd="70dp"
                        android:layout_toStartOf="@id/profile_icon"
                        android:clickable="true"
                        android:contentDescription="Notifications"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/notification" />

                    <ImageView
                        android:id="@+id/profile_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="Profile"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground" />
                </RelativeLayout>

                <!-- Welcome Message -->
                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome back, Customer!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textColor="#FF9800"
                    android:gravity="start" />

                <!-- Search Bar -->
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:queryHint="Search for menu......."
                    app:iconifiedByDefault="false"
                    android:layout_marginTop="24dp"
                    android:padding="10dp"
                    android:background="@drawable/rounded_searchview_background"/>

                <!-- Promos Section -->
                <TextView
                    android:id="@+id/promos_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Store Promos"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:textColor="#FF9800"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Promotions RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/promosRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:clipToPadding="false" />

                <!-- Category Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Categories"
                        android:textSize="28sp"
                        android:textColor="#FF9800"
                        android:textStyle="bold|italic"
                        />
                    <TextView
                        android:id="@+id/see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="See all"
                        android:textColor="#FF9800"
                        android:textSize="19sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textStyle="bold|italic"
                        />
                </LinearLayout>

                <!-- Category RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:clipToPadding="false"
                    android:scrollbars="horizontal" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- Footer -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            app:itemTextColor="#FF9800"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/white"
            app:itemTextAppearanceInactive="@menu/menu_main"
            app:itemHorizontalTranslationEnabled="true"
            app:menu="@menu/menu_main"
            />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
