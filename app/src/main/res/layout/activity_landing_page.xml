<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landing_page">

    <!-- Background image with overlay -->
    <ImageView
        android:id="@+id/backgroundImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/landingpage" />

    <!-- Container for centered text content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- Main headline text -->
        <TextView
            android:id="@+id/landingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to The Garden Of Eat'N,\na place where we offer\nRefined Taste. Reserved Ambience."
            android:textSize="28sp"
            android:textColor="#FF9800"
            android:textStyle="italic|bold"
            android:shadowColor="#66000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />


        <!-- Subheading text -->
        <TextView
            android:id="@+id/landingSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="An exclusive dining experience â€” where every detail speaks luxury."
            android:textSize="20sp"
            android:textColor="#FF9800"
            android:textStyle="italic"
            android:shadowColor="#66000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />
    </LinearLayout>

    <!-- Button container for bottom-right positioning -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp"
        android:paddingEnd="32dp">

        <!-- Animated booking button -->
        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="Explore fine dining"
            android:textColor="#FF9800"
            android:background="@drawable/gold_border_button"
            android:elevation="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:stateListAnimator="@animator/button_state_animator" />
    </FrameLayout>

    <!-- ðŸ”¥ Gold Dust Effect View on top of everything -->
    <com.example.thegardenofeatn.GoldDustParticleView
        android:id="@+id/goldDustView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false" />

</FrameLayout>
